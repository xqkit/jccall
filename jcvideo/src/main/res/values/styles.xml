<resources>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="JCButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@drawable/jc_button_text_color</item>
        <item name="android:background">@drawable/jc_button</item>
        <item name="android:shadowColor">#CC999999</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
